{
  "$schema": "http://json-schema.org/schema",
  "$id": "CustomControlSchematic",
  "title": "ng generate custom-control schema",
  "type": "object",
  "description": "Generate a custom control",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the project",
      "x-prompt": "Name:",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the service.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "vale-type": {
      "type": "string",
      "description": "The type of the value.",
      "enum": [
        "string",
        "number",
        "boolean",
        "object",
        "array",
        "any"
      ],
      "default": "any",
      "x-prompt": "Value type:"
    }
  },
  "required": [
    "name"
  ]
}
